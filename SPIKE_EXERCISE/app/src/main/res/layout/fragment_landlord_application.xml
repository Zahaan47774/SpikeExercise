<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.apply.LandlordApplicationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginTop="10dp"
            android:text="Applications"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Landlord_Application_Name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Landlord_Address"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Address"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AcceptApplication"
                android:layout_width="210dp"
                android:layout_height="99dp"
                android:text="Accept" />

            <Button
                android:id="@+id/DenyButton"
                android:layout_width="100dp"
                android:layout_height="99dp"
                android:layout_weight="1"
                android:text="Deny" />

        </LinearLayout>

        <Button
            android:id="@+id/NextApplicant"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:text="Next Applicant" />

    </LinearLayout>

</FrameLayout>